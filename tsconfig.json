{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "resolveJsonModule": true,    
    "forceConsistentCasingInFileNames": true,        
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
